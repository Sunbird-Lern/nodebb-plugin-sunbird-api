{
	"id": "nodebb-plugin-create-forum",
	"name": "NodeBB Write-Enabled API",
	"description": "A RESTful JSON-speaking API allowing you to write things to NodeBB",
	"url": "https://github.com/Sunbird-Ed/nodebb-plugin-sunbird-api",
	"library": "./index.js",
	"templates": "templates",
	"hooks": [
		{ "hook": "static:app.load", "method": "load" },
		{"hook": "filter:topic.create", "method": "topicCreate" },
		{"hook": "action:post.updatePostVoteCount", "method": "postVote" },
		{"hook": "filter:error.handle", "method": "errorLog" },
		{"hook": "action:sockets.disconnect", "method": "socketDisconnected" },
		{"hook": "action:sockets.connect", "method": "socketConnected" }
	],
	"less": [
		"./less/style.less"
	],
	"acpScripts": [
		"public/js/admin.js"
	]
}